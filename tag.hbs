{{!< default}}
{{#contentFor "title"}}{{meta_title}}{{/contentFor}}

<div class="gh-article gh-page">

    <div class="gh-container">
        {{> "category-buttons" }}

        {{#tag}}
        <header class="gh-page-head">

            <span class="mo-tag-icon">{{> "icons/abstract2"}}</span>

            <h1 class="mo-section-title">{{name}}</h1>

            <p>
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

            {{#if feature_image}}
                <img class="gh-page-image" src="{{feature_image}}" alt="{{name}}" />
            {{/if}}

        </header>
        {{/tag}}

        <div class="gh-postfeed">
        {{#foreach posts}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
