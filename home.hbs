{{!< default}}
<div class="mo-hero-container">
    <div class="mo-hero-content mo-randword-container pos-relative">                            
        <div class="mo-randword-item1 font-title"><h1><span>MAGGIE</span> <span class="text-right">OATES</span></h1></div>                                     
        <div class="mo-randword-item2">
            <button id="randWordButton" class="gh-button mo-button mo-randword-button mo-glowing">Pick your fighter.</button>
            <button id="addSlashButton" class="gh-button mo-button mo-randword-button">Multiclass?</button>                        
        </div>                    
        <div class="mo-randword-item3 mo-randwords"><div id="randWord" class="mo-rand-word"></div></div>
        <div class="mo-randword-item4 pos-absolute"><span class="mo-randWordNote" id="randWordNote"></span></div>
    </div>

  
</div>        

<div class="gh-page">               
    
    <div class="gh-container">
        <h2 class="mo-section-title">Recent Projects</h2>

        <div class="gh-postfeed">
            {{#get "posts" filter="tag:hash-project" limit="3" as |projects|}}
                {{#foreach projects}}

                    {{> "card"  }} {{!-- partials/card.hbs --}}

                {{/foreach}}
            {{/get}}
        </div>

        </br>

        <h2 class="mo-section-title">Recent Blogs</h2>
        <div class="gh-postfeed">        
            {{#get "posts" filter="tag:hash-blog" limit="3" as |blogs| }}
                {{#foreach blogs}}

                    {{> "card"  }} {{!-- partials/card.hbs --}}

                {{/foreach}}
            {{/get}}
        </div>

        
        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                
            </div>
        </noscript>        
    </div>
</div> 