{{!< default}}
<div class="mo-hero-container">
    <div class="mo-hero-content mo-randword-container">                            
        <div class="mo-randword-item1"><h1>Maggie is...</h1></div>                                     
        <div class="mo-randword-item2">
            <button id="randWordButton" class="gh-button mo-button mo-randword-button">You decide.</button>
            <button id="addSlashButton" class="gh-button mo-button mo-randword-button">Add a slash?</button>                        
        </div>                    
        <div class="mo-randword-item3 mo-randwords"><div id="randWord"></div></div>
        <div class="mo-randword-item4"><span class="mo-randWordNote" id="randWordNote"></span></div>
    </div>
</div>        

 
<div class="gh-page">               
    
    <div class="gh-container">
        <h2>Recent Projects</h2>

        <div class="gh-postfeed">
            {{#get "posts" filter="tag:hash-project" limit="3" as |projects|}}
                {{#foreach projects}}

                    {{> "card"  }} {{!-- partials/card.hbs --}}

                {{/foreach}}
            {{/get}}
        </div>

        <h2>Recent Blogs</h2>
        <div class="gh-postfeed">        
            {{#get "posts" filter="tag:hash-blog" limit="3" as |blogs| }}
                {{#foreach blogs}}

                    {{> "card"  }} {{!-- partials/card.hbs --}}

                {{/foreach}}
            {{/get}}
        </div>

        
        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                
            </div>
        </noscript>        
    </div>
</div> 